<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Academic_ponpes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary10</item>
        <item name="colorPrimaryVariant">@color/primary50</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary10</item>
        <item name="colorSecondaryVariant">@color/primary30</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Academic_ponpes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoBackgroundDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">false</item>

    </style>

    <style name="Theme.Academic_ponpes.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Academica_Tenant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>